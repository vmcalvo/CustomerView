<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="oauthapp">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request>
            <Step>
                <Name>remove-header-authorization</Name>
            </Step>
            <Step>
                <Name>Flow-Callout-JWT-Oauth</Name>
            </Step>
        </Request>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="responseFindMe">
            <Description>get</Description>
            <Request>
                <Step>
                    <Name>Verify-OAuth-20-me</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/customer360View/me") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="responseFind">
            <Description>get</Description>
            <Request>
                <Step>
                    <Name>verify-oauth-v2-access-token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/customer360View") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/oauth/customerView${deployment.suffix}/v2</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>