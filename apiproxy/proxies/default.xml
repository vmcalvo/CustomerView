<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Flow-Callout-Header</Name>
            </Step>
            <Step>
                <Name>Get-Access-Token</Name>
            </Step>
            <Step>
                <Name>Verify-API-Key</Name>
            </Step>
            <Step>
                <Name>Flow-Callout-JWT</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="responseFindMe">
            <Description>get</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/customer360View/me") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="responseFind">
            <Description>get</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/customer360View") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/customerView${deployment.suffix}/v2</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>